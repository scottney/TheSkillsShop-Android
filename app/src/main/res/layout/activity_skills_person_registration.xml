<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="false"
    tools:context=".SkillsPersonRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/skills_person_registration"
            android:textSize="26sp"
            android:padding="10dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/first_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_first_name"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_surname"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/middle_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_middle_name"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/id_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_id_number"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="number"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/skills_person_registration_important"
            android:textSize="12sp"
            android:padding="5dp" />

        <EditText
            android:id="@+id/skills_persons_service_numbers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_skills_persons_service_number"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="text"/>

        <EditText
            android:id="@+id/phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_phone_number"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/alternative_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_alternative_phone_number"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_email"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_address"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:inputType="textPostalAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:text="@string/skills_person_registration_skillset_offered"
            android:textSize="18sp"
            android:padding="5dp"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/skillset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:entries="@array/services_array" />

        <EditText
            android:id="@+id/skillset_description"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/skills_person_registration_skillset_required"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"/>

        <EditText
            android:id="@+id/service_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/customers_booking_service_date"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:scrollbars="vertical"
            android:inputType="date"/>

        <EditText
            android:id="@+id/service_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="22sp"
            android:hint="@string/customers_booking_service_time"
            android:padding="5dp"
            android:background="@drawable/input_bg"
            android:importantForAutofill="no"
            android:scrollbars="vertical"
            android:inputType="time"/>

        <Button
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="UploadImage"
            android:text="@string/skills_person_registration_image_upload"/>

        <Button
            android:id="@+id/report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="UploadReport"
            android:text="@string/skills_person_registration_report_upload"/>

        <Button
            android:id="@+id/letters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="UploaadLetter"
            android:text="@string/skills_person_registration_letters_upload"/>
        
        <!--<TextClock
            android:id="@+id/created_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:padding="5dp"
            android:background="@drawable/input_bg"/>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="75dp"
            android:layout_marginLeft="55dp"
            android:background="@color/colorDanger"
            android:textColor="#FFF"
            android:onClick="reset"
            android:text="@string/messages_reset"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-124dp"
            android:layout_marginLeft="215dp"
            android:background="@color/colorGo"
            android:textColor="#FFF"
            android:onClick="submit"
            android:text="@string/messages_submit"/>

    </LinearLayout>

</ScrollView>