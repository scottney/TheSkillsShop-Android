<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bluecollar"
    tools:context=".HomeActivity">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/services_title_view"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="12dp"
               android:text="@string/servicestitle"
               android:textColor="#FFF"
               android:textSize="25sp"
               android:textStyle="bold" />

           <GridLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:rowCount="6"
               android:columnCount="2"
               android:layout_margin="5dp"
               android:layout_below="@+id/services_title_view">

               <androidx.cardview.widget.CardView
                   android:id="@+id/plumbing"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:layout_margin="10dp"
                   android:layout_row="0"
                   android:layout_column="0"
                   android:layout_gravity="fill"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="5dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:orientation="vertical"
                       android:gravity="center">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:text="@string/plumbing"
                           android:textAlignment="center"
                           android:textStyle="bold" />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/carpentry"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:layout_margin="10dp"
                   android:layout_row="0"
                   android:layout_column="1"
                   android:layout_gravity="fill"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="5dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:orientation="vertical"
                       android:gravity="center">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:text="@string/carpentry"
                           android:textAlignment="center"
                           android:textStyle="bold" />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/cabinet_making"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:layout_margin="10dp"
                   android:layout_row="1"
                   android:layout_column="0"
                   android:layout_gravity="fill"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="5dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:orientation="vertical"
                       android:gravity="center">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:text="@string/cabinet_making"
                           android:textAlignment="center"
                           android:textStyle="bold" />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/masonry"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:layout_margin="10dp"
                   android:layout_row="1"
                   android:layout_column="1"
                   android:layout_gravity="fill"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="5dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
                       android:orientation="vertical"
                       android:gravity="center">

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center_horizontal"
                           android:text="@string/masonry"
                           android:textAlignment="center"
                           android:textStyle="bold" />

                   </LinearLayout>

               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/gardening"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="20dp"
                   android:layout_margin="10dp"
                   android:layout_row="2"
                   android:layout_column="0"
                   android:layout_gravity="fill"
                   android:layout_rowWeight="1"
                   android:layout_columnWeight="1"
                   app:cardCornerRadius="15dp"
                   app:cardElevation="5dp">

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="35dp"
